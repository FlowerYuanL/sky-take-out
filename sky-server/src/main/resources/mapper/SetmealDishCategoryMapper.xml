<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
  mapper 根标签：
  - namespace（必需）：绑定 Mapper 接口的全限定名（包名+接口名）
  - 作用：建立 XML 文件与 Java 接口的关联[1,6,8](@ref)
-->
<mapper namespace="com.sky.mapper.SetmealDishCategoryMapper">

    <resultMap id="setmealDishMap" type="setmealDish">
        <id property="id" column="sd_id"/>
        <result property="setmealId" column="sd_setmeal_id"/>
        <result property="dishId" column="sd_dish_id"/>
        <result property="name" column="sd_name"/>
        <result property="price" column="sd_price"/>
        <result property="copies" column="sd_copies"/>
    </resultMap>

    <resultMap id="setmealVOMap" type="SetmealVO">
        <id property="id" column="s_id"/>
        <result property="categoryId" column="s_category_id"/>
        <result property="name" column="s_name"/>
        <result property="price" column="s_price"/>
        <result property="status" column="s_status"/>
        <result property="description" column="s_description"/>
        <result property="image" column="s_image"/>
        <result property="updateTime" column="s_update_time"/>
        <result property="categoryName" column="c_name"/>
        <collection property="setmealDishes" ofType="setmealDish" resultMap="setmealDishMap"/>
    </resultMap>

    <select id="getBySetmealId" resultMap="setmealVOMap">
        select
            s.id as s_id,
            s.category_id as s_category_id,
            s.name as s_name,
            s.price as s_price,
            s.status as s_status,
            s.description as s_description,
            s.image as s_image,
            s.update_time as s_update_time,
            sd.id as sd_id,
            sd.setmeal_id as sd_setmeal_id,
            sd.dish_id as sd_dish_id,
            sd.name as sd_name,
            sd.price as sd_price,
            sd.copies as sd_copies,
            c.name as c_name
        from setmeal s
                 left join setmeal_dish sd on s.id = sd.setmeal_id
                 left join category c on s.category_id = c.id
        where s.id = #{id}
    </select>
</mapper>