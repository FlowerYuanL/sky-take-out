<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
  mapper 根标签：
  - namespace（必需）：绑定 Mapper 接口的全限定名（包名+接口名）
  - 作用：建立 XML 文件与 Java 接口的关联[1,6,8](@ref)
-->
<mapper namespace="com.sky.mapper.DishAndCategoryMapper">

    <resultMap id="dishAndCategory" type="dishVO">
        <id column="d_id" property="id"/>
        <result column="d_name" property="name"/>
        <result column="d_category_id" property="categoryId"/>
        <result column="d_price" property="price"/>
        <result column="d_image" property="image"/>
        <result column="d_description" property="description"/>
        <result column="d_status" property="status"/>
        <result column="d_update_time" property="updateTime"/>
        <result column="c_name" property="categoryName"/>
    </resultMap>

    <select id="getAll" resultMap="dishAndCategory">
        SELECT
            d.id d_id, d.name d_name,d.price d_price, d.category_id d_category_id ,d.image d_image, d.description d_description, d.status d_status, d.update_time d_update_time,
            c.name c_name
        FROM dish d left join category c
        ON d.category_id = c.id
        <where>
            <if test="name != null and name != ''">
                and d.name like concat('%',#{name},'%')
            </if>
            <if test="categoryId != null">
                and d.category_id = #{categoryId}
            </if>
            <if test="status != null">
                and d.status = #{status}
            </if>
        </where>
        ORDER BY d.update_time desc
    </select>

</mapper>